@model Periodicals.DAL.Entities.Topic

@{
    ViewBag.Title = "Удаление темы";
    Layout = "~/Views/Shared/_LayoutOther.cshtml";
}

<h2>@Html.DisplayFor(model => model.NameOfTopic)</h2>

<h3>Вы уверенны, что хотите удалить тему?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Описание
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-group text-center">
            <input type="submit" value="ОК" class="btn btn-default" /> |
            @Html.ActionLink("Назад", "Index1", null, htmlAttributes: new { @class = "btn btn-default" })
        </div>
    }
</div>
