            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @Html.Partial("_LoginPartial")
                    </li>
                    <li>@Html.ActionLink("Главная", "Index", "Home")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Мой профиль", "Details", "Manage")</li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Все пользователи", "AllUsers", "Account")</li>

                        <li>@Html.ActionLink("Неактивные пользователи", "AllBlockedUsers", "Account")</li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Темы", "Index1", "Topics")</li>

                        <li>@Html.ActionLink("Издания", "Index", "Publications")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Издания", "Index1", "Topics")</li>
                    }
                    @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin") && !User.IsInRole("Support"))
                    {
                        <li>@Html.ActionLink("Мой счет", "Index", "PersonalAccounts")</li>

                        <li>@Html.ActionLink("Мои подписки", "Index", "UserPublications")</li>
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("Support"))
                    {
                        <li>@Html.ActionLink("Подписки", "IndexByName", "UserPublications")</li>
                    }

                    <li>@Html.ActionLink("Каталог", "GeneratePDF", "Publications")</li>
                    <li>@Html.ActionLink("О нас", "About", "Home")</li>
                    <li>@Html.ActionLink("Контакты", "Contact", "Home")</li>
